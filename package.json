{
  "name": "rawalite",
  "version": "1.5.6",
  "private": true,
  "license": "UNLICENSED",
  "author": "MonaFP",
  "description": "RawaLite - Professional Business Management Solution",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "npm-run-all -l -p vite electron:dev",
    "vite": "vite",
    "electron:dev": "npm-run-all -s build:preload build:main && electron dist-electron/main.cjs",
    "build": "vite build && npm-run-all -s build:preload build:main",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=dist-electron/preload.js",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist-electron/main.cjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "e2e": "@playwright/test",
    "dist": "electron-builder",
    "postinstall": "node -e \"require('fs').mkdirSync('public',{recursive:true});require('fs').cpSync(require.resolve('sql.js/dist/sql-wasm.wasm'),'public/sql-wasm.wasm',{force:true})\""
  },
  "dependencies": {
    "@fontsource/roboto": "^5.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "dexie": "^4.2.0",
    "electron": "^31.7.7",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.2",
    "sql.js": "^1.13.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.5",
    "eslint": "^9.9.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
