{
  "name": "rawalite",
  "version": "1.8.45",
  "private": true,
  "license": "UNLICENSED",
  "author": "MonaFP",
  "description": "RawaLite - Professional Business Management Solution",
  "type": "module",
  "engines": {
    "node": "^20"
  },
  "main": "dist-electron/main.cjs",
  "scripts": {
    "start": "electron dist-electron/main.cjs",
    "dev": "run-p vite electron:dev",
    "vite": "vite",
    "electron:dev": "run-s build:preload build:main && electron dist-electron/main.cjs",
    "build": "vite build && run-s build:preload build:main",
    "build:clean": "rimraf dist dist-electron && pnpm build",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=dist-electron/preload.js",
    "build:preload:clean": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=dist-electron/preload.js --no-bundle-cache",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist-electron/main.cjs",
    "build:main:clean": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist-electron/main.cjs --no-bundle-cache",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "e2e": "playwright test",
    "prebuild": "rimraf dist dist-electron node_modules/.vite",
    "_predist_disabled": "pnpm prebuild",
    "prerelease:dry": "pnpm prebuild",
    "prerelease:publish": "pnpm prebuild",
    "dist": "electron-builder --win --x64 --publish never",
    "dist:clean": "rimraf dist dist-electron release && pnpm build && pnpm dist",
    "release:dry": "electron-builder --win --x64 --publish never",
    "release:publish": "electron-builder --win --x64 --publish always",
    "release:clean": "pnpm dist:clean && node scripts/create-release.mjs",
    "release:manifest": "tsx scripts/make-update-json.ts",
    "release:verify": "tsx scripts/verify-update.ts",
    "version:check": "node validate-version-sync.mjs",
    "version:sync": "node sync-versions.mjs",
    "ipc:validate": "node validate-ipc-types.mjs",
    "guard:external": "git grep -nE \"shell\\.openExternal|window\\.open|target=\\\"_blank\\\"\" src/ electron/ templates/ && echo \"FOUND EXTERNALS - CHECK ABOVE\" || echo \"NO EXTERNALS FOUND\"",
    "guard:pdf": "git grep -nE \"<link[^>]+https?://|<script[^>]+https?://|<img[^>]+https?://\" templates || echo \"NO EXTERNAL ASSETS\"",
    "guard:templates": "node guard-template-migrations.mjs",
    "guard:backup": "node guard-backup-storage.mjs",
    "guard:release:assets": "node guard-release-assets.mjs",
    "guard:build:freshness": "node scripts/validate-build-freshness.mjs",
    "precommit": "pnpm typecheck && pnpm lint && pnpm guard:external && pnpm guard:pdf && pnpm guard:templates && pnpm guard:backup && pnpm ipc:validate && pnpm version:check && pnpm guard:build:freshness",
    "postinstall": "node -e \"require('fs').mkdirSync('public',{recursive:true});require('fs').cpSync(require.resolve('sql.js/dist/sql-wasm.wasm'),'public/sql-wasm.wasm',{force:true})\""
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "dexie": "^4.2.0",
    "electron-log": "^5.4.3",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.1",
    "sql.js": "^1.13.0",
    "typescript": "^5.9.2"

  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.14.10",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.5",
    "eslint": "^9.9.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
