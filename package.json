{
  "name": "rawalite",
  "version": "1.8.10",
  "private": true,
  "license": "UNLICENSED",
  "author": "MonaFP",
  "description": "RawaLite - Professional Business Management Solution",
  "type": "module",
  "engines": {
    "node": "^20"
  },
  "main": "dist-electron/main.cjs",
  "scripts": {
    "start": "electron dist-electron/main.cjs",
    "dev": "run-p vite electron:dev",
    "vite": "vite",
    "electron:dev": "run-s build:preload build:main && electron dist-electron/main.cjs --dev",
    "build": "vite build && run-s build:preload build:main",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=dist-electron/preload.js",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist-electron/main.cjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "e2e": "playwright test",
    "dist": "electron-builder --win --x64 --publish never",
    "release:dry": "electron-builder --win --x64 --publish never",
    "release:publish": "electron-builder --win --x64 --publish always",
    "version:check": "node validate-version-sync.mjs",
    "guard:not-last-tag": "node scripts/guard-not-on-last-tag.mjs",
    "precommit": "pnpm typecheck && pnpm lint && pnpm guard:external && pnpm guard:pdf && pnpm guard:templates && pnpm guard:backup && pnpm ipc:validate && pnpm version:check",
    "version:sync": "echo \"Version sync via version:bump script\"",
    "ipc:validate": "node validate-ipc-types.mjs",
    "guard:external": "git grep -nE \"shell\\.openExternal|window\\.open|target=\\\"_blank\\\"\" src/ electron/ templates/ && echo \"FOUND EXTERNALS - CHECK ABOVE\" || echo \"NO EXTERNALS FOUND\"",
    "guard:pdf": "git grep -nE \"<link[^>]+https?://|<script[^>]+https?://|<img[^>]+https?://\" templates || echo \"NO EXTERNAL ASSETS\"",
    "guard:templates": "node guard-template-migrations.mjs",
    "guard:backup": "node guard-backup-storage.mjs",
    "guard:release:assets": "node guard-release-assets.mjs",
    "version:bump": "node scripts/version-bump.mjs",
    "version:bump:patch": "pnpm version:bump patch",
    "version:bump:minor": "pnpm version:bump minor",
    "version:bump:major": "pnpm version:bump major",
    "postinstall": "node -e \"require('fs').mkdirSync('public',{recursive:true});require('fs').cpSync(require.resolve('sql.js/dist/sql-wasm.wasm'),'public/sql-wasm.wasm',{force:true})\""
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "dexie": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "6.28.0",
    "sql.js": "^1.13.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.14.10",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.5",
    "eslint": "^9.9.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "tsx": "^4.20.5",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
